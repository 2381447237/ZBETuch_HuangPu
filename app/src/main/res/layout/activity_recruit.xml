<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:ptr="http://schemas.android.com/tools"
    tools:context="com.youli.zbetuch_huangpu.activity.RecruitActivity"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:background="@drawable/shape_homepage_title_rl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_margin="6dp"
            android:background="@drawable/xz"

            />

        <TextView
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="@string/zpgl_title"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    </LinearLayout>

    <LinearLayout
        android:background="@drawable/title2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000"
            style="@style/resources_main_title"
            android:paddingLeft="3dp"
            android:text="编号"
            android:layout_weight="1"
            />

        <TextView
            android:textColor="#000"
            style="@style/resources_main_title"
            android:layout_weight="5"
            android:text="招聘会名称"
            />
        <TextView
            android:textColor="#000"
            style="@style/resources_main_title"
            android:layout_weight="2"
            android:text="招聘会时间"
            />
        <TextView
            android:textColor="#000"
            style="@style/resources_main_title"
            android:layout_weight="3"
            android:text="招聘会地址"
            />

    </LinearLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_my_zpgl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#000000"
        android:divider="#19000000"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="rotate"/>



</LinearLayout>
