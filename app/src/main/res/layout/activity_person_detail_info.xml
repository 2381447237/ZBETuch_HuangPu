<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#c2d5eb"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/shape_homepage_title_rl"
        >

        <TextView
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="个 人 信 息"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_person_info_pif"
        android:background="#5ba4e6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="fill_parent"
         >

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_person_info_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/personhead" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓        名:"/>
                    <TextView
                        android:text="沈  文  伟"
                        android:id="@+id/tv_person_info_name"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <ImageView
                        android:id="@+id/iv_person_info_modify"
                        android:layout_marginLeft="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/xg"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp"
                    android:paddingLeft="10dp">

                    <TextView
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性        别:"/>
                    <TextView
                        android:text="男"
                        android:id="@+id/tv_person_info_sex"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <TextView
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="状        态:"/>
                    <TextView
                        android:text="无  业"
                        android:id="@+id/tv_person_info_status"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">

                    <TextView
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件号码:"/>
                    <TextView
                        android:text="000000198312230005"
                        android:id="@+id/tv_person_info_sfz"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <Button
                android:textColor="#ffffff"
                android:id="@+id/btn_person_info_follow"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_selector"
                android:text="关注" />

        </LinearLayout>
    </LinearLayout>



    <android.support.design.widget.TabLayout
        android:overScrollMode="never"
        android:id="@+id/tl_person_detail_info"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabIndicatorColor="@color/tabLay"
        app:tabBackground="@color/tabLayBg"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        ></android.support.design.widget.TabLayout>
    <com.youli.zbetuch_huangpu.view.MyViewPager
        android:id="@+id/vp_person_detail_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.youli.zbetuch_huangpu.view.MyViewPager>
</LinearLayout>